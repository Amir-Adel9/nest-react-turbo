# STAGE 1: Build
FROM node:lts-alpine AS builder
RUN npm install -g pnpm
WORKDIR /app

COPY pnpm-lock.yaml pnpm-workspace.yaml package.json ./
COPY apps/web/package.json ./apps/web/
# COPY packages/api-contract/package.json ./packages/api-contract/

RUN pnpm install --frozen-lockfile

COPY apps/web ./apps/web
# COPY packages/api-contract ./packages/api-contract
COPY turbo.json .

RUN pnpm turbo build --filter=web...

# STAGE 2: Serve
FROM nginx:stable-alpine
# SSL config template (used by entrypoint when certs exist)
RUN mkdir -p /etc/nginx/templates
COPY docker/nginx-ssl.conf.template /etc/nginx/templates/
# Default config (HTTP + ACME webroot for Certbot)
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf
# Entrypoint: switches to HTTPS config when DOMAIN_NAME + certs present
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh
# Certbot webroot dir (mount point for ACME challenges)
RUN mkdir -p /var/www/certbot
# Copy static files from builder
COPY --from=builder /app/apps/web/dist /usr/share/nginx/html
EXPOSE 80 443
ENTRYPOINT ["/entrypoint.sh"]